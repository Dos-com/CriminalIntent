<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/crime_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>

    <Button
        android:id="@+id/view_pager_beginning_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beginning"
        android:layout_gravity="bottom|left"></Button>

    <Button
        android:id="@+id/view_pager_end_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="END"
        android:layout_gravity="bottom|right"></Button>
</FrameLayout>